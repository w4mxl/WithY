<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/card_item_shadow"/>
            <!-- 弧形半径 -->
            <corners android:radius="4dp"/>
            <padding
                android:left="4dp"
                android:right="4dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/card_item_shadow"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle" >
            <!-- 弧形半径 -->
            <corners android:radius="4dp"/>
            <padding
                android:left="4dp"
                android:right="4dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/card_item_shadow"/>
        </shape>
    </item>
</selector>