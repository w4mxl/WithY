<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="actionBarItemBackground">@null</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_pressed</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="displayOptions">showTitle</item>
        <item name="titleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="background">@drawable/action_bar_item_background</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="background">@drawable/action_bar_item_background</item>
    </style>

    <!-- @android:style/Theme.Holo.Light -->
</resources>
